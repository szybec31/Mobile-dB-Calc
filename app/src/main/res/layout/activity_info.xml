<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Info_Activity">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/dark_orange"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:text="Important Values !">

    </TextView>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Wat unit"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_span="2"
                android:background="@drawable/in_out_data_entry"
                android:textStyle="bold"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Volt unit"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_span="2"
                android:background="@drawable/in_out_data_entry"
                android:textStyle="bold"
                android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Linear [W]"
                android:gravity="center"
                android:textSize="15dp"
                android:background="@drawable/table_header"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Logarithmic  [dBW]"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="@drawable/table_header"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Linear [V]"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="@drawable/table_header"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Logarithmic  [dBV]"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15dp"
                android:background="@drawable/table_header"
                android:padding="8dp"/>
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/button_background_selector" />

</LinearLayout>